<!DOCTYPE html>
<html>
<head>
  <title>SSG :: Admin</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    "ssg_admin", :media => "all" %>
  <%= javascript_include_tag "application" %>
</head>
<body>
  <div id="main" class="container-fluid">
    <% if @user && @user.ssg_admin? %>
      <div class="navbar">
        <div class="navbar-inner">
          <a class="brand" href="<%= ssg_admin_path %>">SSG Admin</a>
          <ul class="nav">
            <li><a href="<%= ssg_admin_cities_path() %>">Gradovi</a></li>
            <li><a href="<%= ssg_admin_categories_path() %>">Kategorije</a></li>
            <li><a href="#settings">Korisnici</a></li>
          </ul>
          <ul class="nav pull-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= @user.display_name %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a href="#"><%=link_to 'Odjava', logout_user_path(@user.id)%></a>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
    <div class="row-fluid">
      <%= yield %>
    </div>
  </div>
  <%= javascript_include_tag "ssg_admin" %>
  <%= yield :javascript %>
</body>
</html>
