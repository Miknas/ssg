<div><%= form_tag sign_up_users_path() do %>
	<%= collection_select(:city, :id, @cities, :id, :name, options ={:prompt => "Select a city"}) %><br/>
	<%= text_field_tag :username, nil, :placeholder => 'Username' %><br/>
	<%= text_field_tag :email, nil, :placeholder => 'Email' %><br/>
	<%= password_field_tag :password, nil, :placeholder => 'Password' %><br/>
	<%= password_field_tag :password2, nil, :placeholder => 'Repeat password' %><br/>
	<%= submit_tag 'sign up'%>
<%end%>
</div>