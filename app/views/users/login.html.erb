<div class="login-container">
	<span class='font-dp-bold font-18'><%=t('users.login.login') %></span><br>
	<span class='font-dp-regular'><%=t('users.login.login_message') %></span>
	<%=form_tag verify_login_users_path(), :id => "login_form" do %>
		<%= text_field_tag :username, nil, :placeholder => t('users.login.username') %><br/>
		<%= password_field_tag :password, nil, :placeholder => t('users.login.password') %><br/>
		<%= check_box_tag 'remember_login' %>
		<%= label_tag t('users.login.stay_logged') %><br/>
		<%= ssg_button t('users.login.login_button'), {:onclick => "$('\#login_form').submit();"}%>
	<% end %>
</div>
<div class="login-container">
	<div id="register-wrapper">
		<span class='font-dp-bold font-18'><%=t('users.login.register') %></span><br>
		<span class='font-dp-regular'><%=t('users.login.register_message') %></span>
		<%= form_tag sign_up_users_path(), :id => "register_form" do %>
			<%= collection_select(:city, :id, @cities, :id, :name, {:prompt => t('users.login.register_choose_location')}, :class => "font-dp-regular") %><br/>
			<%= text_field_tag :username, nil, :placeholder => t('users.login.username'), :class => "input-texts" %><br/>
			<%= text_field_tag :email, nil, :placeholder => t('users.login.register_email'), :class => "font-dp-regular" %><br/>
			<%= password_field_tag :password, nil, :placeholder => t('users.login.password'), :class => "font-dp-regular" %><br/>
			<%= password_field_tag :password2, nil, :placeholder => t('users.login.register_repeat_password'), :class => "font-dp-regular" %><br/>
			<%= check_box_tag :terms_of_use %>
			<%= label_tag t('users.login.register_agree_tou') %><br>
			<%= ssg_button t('users.login.register_button'), {:onclick => "$('\#register_form').submit();"}%>
		<%end%>
	</div>
</div>
<div class="login-container">
	<span class='font-dp-bold font-18'><%=t('users.login.quick_sign_in') %></span><br>
	<span class='font-dp-regular'><%=t('users.login.quick_sign_in_message') %></span><br>
	<%= link_to image_tag('fb_login_en.png'), '#', :id => 'fb-login-link' %> 
</div>
<br style="clear:both">

<script type="text/javascript">
	$('#fb-login-link').click(function(event) {
		fb_login('<%=Config::get(:fb, :application_id)%>', escape('<%=fb_login_users_url()%>'), '<%=Config::get(:fb, :scope)%>'); 
		return false;
	});
</script>