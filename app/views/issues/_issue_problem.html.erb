<div class="issue-container-green">
  <div class="issue-cell">
    <span class="issue-cell-title"><%= trans(@issue.title.upcase) %></span><br/>
    <span class="issue-cell-subtitle"><%=@issue.category.name%>, <%=@issue.city.name%></span><br/>
  </div>
  <div class="issue-cell">
    <p><%= trans(@issue.description.gsub(/(?:\n\r?|\r\n?)/, '<br/>')).html_safe%></p>
  </div>
  <br />
  <div  class="issue-cell">
    <% @issue.images.each do |img| %>
      <%= image_tag img.image.issue_full, :style=> 'margin-bottom:20px;'%><br/>
    <% end %>
  </div>
</div>

<div>
  <br>
  <span class="issue-share-title"><%= t('issues.show.share') %></span> <br/>

  <a href='<%= @issue.fb_share_link %>' onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=300,toolbar=1,resizable=0'); return false;">
    <%= image_tag 'fbshare2x.png'%>
  </a>

  <a href='<%= @issue.twiter_share_link %>' onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=300,toolbar=1,resizable=0'); return false;" data-via="Ulica.ba">
    <%=image_tag 'twshare2x.png' %>
  </a>  
</div>

