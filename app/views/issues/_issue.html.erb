<div class="issue">
	<div class="issue-img-part">
		<a class="info-link" href="<%=issue_path(issue.friendly_id)%>">
			<div style="height:155px; width:198px;">
				<% if  issue.images.length > 0 %>
					<%=image_tag issue.images.first.image.thumb, :border => '0' %>
				<% end %>
			</div>
		</a>
		<div style="height:5px; background-color:#<%=issue.category.color%>;"></div>
	</div>

	<div class="issue-info-part">
		<a class="info-link" href="<%=issue_path(issue.friendly_id)%>">
			<div class="font-14 issue-info-title">
				<%=issue.title%>
			</div>
			<div class="font-gray-dark font-12 issue-info-name">
				by <a href='<%= user_path(issue.user.id) %>' ><span style="text-decoration: underline;"><%=issue.user.display_name%></span></a>
			</div>
		</a>
		
		<a class="info-link" href="<%=city_path(issue.city.friendly_id)%>">
			<div class="issue-info-loc">
				<span class="asset-location-black" ></span>
				&nbsp;<span class="font-gray-dark" style="line-height:16px;text-decoration:underline;"><%=issue.city.name%></span>
			</div>
		</a>
	</div>
	
	<hr style="margin-top:3px;"/>
	
	<div class="issue-category-part" >
		<span class="font-gray-dark font-12"><b>&nbsp;&nbsp;<%=issue.get_status %></b></span>
		<span class="font-gray-dark font-13 <%= issue.category.name.size > 25 ? 'issue-category-part-name-long' : 'issue-category-part-name' %>">
			<%=issue.category.name%>
		</span>
	</div>
	
	<hr/>
	
	<div class="issue-share-part">
		<span class="asset-heart"></span><span style="float:left;" class="font-bold font-14">&nbsp;&nbsp;<%=issue.vote_count%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
		<span class="asset-eye"></span><span style="float:left;" class="font-bold font-14">&nbsp;&nbsp;<%=issue.session_view_count%></span>
		<span style="float:right; margin-top: 2px; cursor: pointer;" class="font-13 font-gray-dark">
			<% link_url = "#{request.protocol}#{request.host_with_port}#{issue_path(issue.friendly_id)}" %>

			<a href="<%= issue.fb_share_link() %>" onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=300,toolbar=1,resizable=0'); return false;">
  			<%=image_tag 'facebook.png', :border => '0' %>
			</a>

			<a href="https://twitter.com/share?text=<%=issue.title %>&amp;url=<%=link_url%>&amp;hashtags=ulicaba" onclick="window.open(this.href, 'mywin',
'left=20,top=20,width=500,height=300,toolbar=1,resizable=0'); return false;" data-via="Ulica.ba">
				<%=image_tag 'twitter.png', :border => '0' %>
			</a>
		</span> 
	</div>
</div>
